    /** Creates new form Switches */
    public Switches() {
        // Set the opening location of the window
        super.setLocation(50, 50);
        
        config = Config.getConfig();
        
        initComponents();        
        
        // set the dialog icon
        this.setIconImage(Toolkit.getDefaultToolkit().
                getImage(this.getClass().getClassLoader().getResource("icons/Kernow-Icon.gif")));
        
        // Sort out the radio button groups
        // First the tree types
        treeTypeButtonGroup.add(radioButtonDS);
        treeTypeButtonGroup.add(radioButtonDT);
        
        // Now the whitespace
        whitespaceButtonGroup.add(radioButtonSALL);
        whitespaceButtonGroup.add(radioButtonSIGNORABLE);
        whitespaceButtonGroup.add(radioButtonSNONE);
        
        // Now the warnings
        warningsButtonGroup.add(radioButtonW0);
        warningsButtonGroup.add(radioButtonW1);
        warningsButtonGroup.add(radioButtonW2);
    
        loadSettings();
    }
   
    void loadSettings() {
        radioButtonDS.setSelected(config.isUseStandardTree());
        radioButtonDT.setSelected(config.isUseTinyTree());

        chkBxExplain.setSelected(config.isExplain());
        
        chkBoxIM.setSelected(config.isUseInitialMode());
        initialModeTextField.setEnabled(config.isUseInitialMode());
        initialModeTextField.setText(config.getInitialMode());

        chkBoxIT.setSelected(config.isUseInitialTemplate());
        initialTemplateTextField.setEnabled(config.isUseInitialTemplate());
        initialTemplateTextField.setText(config.getInitialTemplate());

        chkBoxL.setSelected(config.isRetainLineNumbers());
        chkBoxNOVW.setSelected(config.isNovw());

        radioButtonSALL.setSelected(config.isStripAllWhitespace());
        radioButtonSIGNORABLE.setSelected(config.isStripIgnorableWhitespace());
        radioButtonSNONE.setSelected(config.isStripNoWhitespace());

        chkBoxT.setSelected(config.isShowTiming());
        chkBoxTraceJava.setSelected(config.isTraceCalls());

        radioButtonW0.setSelected(config.isRecoverablesAreSilent());
        radioButtonW1.setSelected(config.isRecoverablesAreReported());
        radioButtonW2.setSelected(config.isRecoverablesAreFatal());

        chkBox1point1.setSelected(config.isAllowXML11());            
    }     
        
