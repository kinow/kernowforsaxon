    private void switchesRestoreDefaultsBtnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_switchesRestoreDefaultsBtnActionPerformed
        radioButtonDT.setSelected(true);
        
        chkBxExplain.setSelected(false);
        
        chkBoxIM.setSelected(false);
        initialModeTextField.setText(java.util.ResourceBundle.getBundle("net/sf/kernow/i18n/Switches").getString("[initial_mode]"));
        initialModeTextField.setEnabled(false);
        
        chkBoxIT.setSelected(false);
        initialTemplateTextField.setText(java.util.ResourceBundle.getBundle("net/sf/kernow/i18n/Switches").getString("[initial_template]"));
        initialTemplateTextField.setEnabled(false);
                               
        chkBoxL.setSelected(false);
        chkBoxNOVW.setSelected(false);
        
        radioButtonSNONE.setSelected(true);
        
        chkBoxT.setSelected(false);
        chkBoxTraceJava.setSelected(false);
        
        radioButtonW1.setSelected(true);

        chkBox1point1.setSelected(false);                
    }//GEN-LAST:event_switchesRestoreDefaultsBtnActionPerformed
   
    private void saveValuesToConfig() {
        config.setInitialMode(initialModeTextField.getText());
        config.setInitialTemplate(initialTemplateTextField.getText());
    }
    
    private void doneBtnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_doneBtnActionPerformed
        saveValuesToConfig();
        setVisible(false);
    }//GEN-LAST:event_doneBtnActionPerformed

