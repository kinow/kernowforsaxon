    public Purchase(JFrame tabbedView) {
        initComponents();

        // set the dialog icon
        this.setIconImage(Toolkit.getDefaultToolkit().
                getImage(this.getClass().getClassLoader().getResource("icons/Kernow-Icon.gif")));

        this.config = Config.getConfig();
        this.tabbedView = tabbedView;

        kernowVersion.setText(config.getKernowVersion());
        kernowVersion.setIcon(new ImageIcon(this.getClass().getClassLoader().getResource("icons/Kernow-Icon.gif")));

        purchaseLink.setIcon(new ImageIcon(this.getClass().getClassLoader().getResource("icons/buy.gif")));


        MouseListener mouseListener = new MouseListener(this, Cursor.HAND_CURSOR);
        emailFreeLicLbl.addMouseMotionListener(mouseListener);
        purchaseLink.addMouseMotionListener(mouseListener);

        if (config.getStatus() == Status.LOCKED) {
            Integer remaining = Config.getConfig().getOps();
            if (remaining < 0) {
                remaining = 0;
            }
            remainingUsesValueLbl.setText(Integer.toString(remaining));
        } else {
            remainingUsesValueLbl.setText("Unlocked");
        }
        
        doUpdate();

        MouseListener generalMouseListener = new MouseListener(this, Cursor.DEFAULT_CURSOR);
        super.addMouseMotionListener(generalMouseListener);
    }

