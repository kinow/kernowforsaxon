    private void doUpdate() {
        if (Config.getConfig().getStatus() == Status.UNLOCKED) {
            unlockStatusLbl.setText("Unlocked!");
            unlockStatusLbl.setForeground(Color.GREEN.darker());
            unlockCodeTxtFld.setEnabled(false);
            unlockBttn.setEnabled(false);
            enterCodeLbl.setEnabled(false);
            tabbedView.setTitle(tabbedView.getTitle().replaceAll(" trial", ""));
        }
    }


