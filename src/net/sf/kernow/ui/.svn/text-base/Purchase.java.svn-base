    private void unlockBttnActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_unlockBttnActionPerformed
        String cd = unlockCodeTxtFld.getText();
        byte[] arr = {45,84,104,97,110,107,121,111,117,70,111,114,83,117,112,112,111,114,116,105,110,103,75,101,114,110,111,119,45};
        if (cd.equalsIgnoreCase(new String(arr))) {
            Config.getConfig().setStatus(Status.UNLOCKED);
            PropertyManager.saveProperties(Config.getConfig());
            doUpdate();
        } else {
            unlockStatusLbl.setText("Incorrect code.");
            unlockStatusLbl.setForeground(Color.RED);
        }
    }//GEN-LAST:event_unlockBttnActionPerformed

