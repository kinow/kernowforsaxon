	float:right;
	clear: right;
}

#downloadBox {
	padding: 0px 10px 10px 20px;
	font-size: 1.2em;
}

#contactBox {
	margin-left: 20px;
	width: 300px;
	padding-top: 10px;
	padding-bottom: 10px;
	border-top: 1px solid #cccccc;
	border-bottom: 1px solid #cccccc;
}

