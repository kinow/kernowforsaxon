body {
	font-family: sans-serif;
	font-size: 10pt;
	text-align: center;
	background: #cccccc;
	margin: 0;
}

body h1 {
	margin: 10px;
	margin-left: 20px;
}

div#container {
	margin-left: auto;
	margin-right: auto;
	padding-left: 25px;
	padding-right: 25px;
	width: 900px;
	text-align: left;
	background: #ffffff;
}

