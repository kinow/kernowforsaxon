<xsl:transform version="2.0"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xsl:import-schema>
	<xs:schema>
		<xs:element name="shout" type="xs:string"/>
	</xs:schema>
</xsl:import-schema>

<xsl:template match="/" name="main">
	<shout>Hello World!</shout>
</xsl:template>

</xsl:transform>